<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_record_sign_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_record_work_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="@string/record_work_time_label"
        app:layout_constraintStart_toEndOf="@id/text_record_sign_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_record_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/text_record_work_time_label"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_record_sign_in_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/record_sign_in_time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_record_sign_date"/>

    <TextView
        android:id="@+id/text_record_sign_in_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/text_record_sign_in_time_label"
        app:layout_constraintTop_toBottomOf="@id/text_record_sign_date"/>


    <TextView
        android:id="@+id/text_record_sign_out_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:padding="2dp"
        android:text="@string/record_sign_out_time_label"
        app:layout_constraintEnd_toStartOf="@id/text_record_sign_out_time"
        app:layout_constraintTop_toBottomOf="@id/text_record_sign_date"/>

    <TextView
        android:id="@+id/text_record_sign_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_record_sign_date"/>


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>